<Window x:Class="WPFModernVerticalMenu.Pages.AjoutCategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFModernVerticalMenu.Pages"
        mc:Ignorable="d"
        Title="Ajout Catégorie" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,0,10,10">
            <Label Content="Code de la categorie" Margin="0,0,0,5" Width="194" RenderTransformOrigin="-0.22,1.62" FontWeight="Bold"/>
            <TextBox x:Name="txtCodeCategorie" Width="200" Text="" Margin="10,10,10,10"/>
            <Label Content="Libelle de la catégorie" Margin="0,0,0,5" Width="194" RenderTransformOrigin="-0.22,1.62" FontWeight="Bold"/>
            <TextBox x:Name="txtlibelleCategorie" Width="200" Text="" Margin="10,10,10,10"/>
            <Button Content="Ajouter" Click="btnAjouter_Click" RenderTransformOrigin="0.49,3.73" Margin="10,10,10,10" Width="113" Height="35" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
