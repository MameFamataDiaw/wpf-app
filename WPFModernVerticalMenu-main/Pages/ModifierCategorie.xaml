<Window x:Class="WPFModernVerticalMenu.Pages.ModifierCategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFModernVerticalMenu.Pages"
        mc:Ignorable="d"
        Title="Modification Catégorie" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Code de la categorie" Margin="0,0,0,5" Width="194" RenderTransformOrigin="-0.22,1.62" FontWeight="Bold"/>
            <TextBox x:Name="txtCodeCategorie" Width="200" Margin="0,0,0,10" Text="{Binding CodeCategorie}" />
            <Label Content="Libelle de la categorie" Margin="0,0,0,5" Width="194" RenderTransformOrigin="-0.22,1.62" FontWeight="Bold"/>
            <TextBox x:Name="txtLibelleCategorie" Width="200" Margin="0,0,0,10" Text="{Binding LibelleCategorie}"/>
            <Button Content="Enregistrer" Click="saveBtnModifier_Click" RenderTransformOrigin="0.49,3.73" Margin="10" Width="100" Height="35" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
